<% layout('/layouts/boilerplate') %>
<style>
   
   /* Three columns side by side */
.column {
  float: left;
  /* width: 33.3%; */
  margin-bottom: 16px;
  padding: 0 8px;
  margin: 0 auto;
  /* float: left; */
  /* width: 50%; */
  /* padding: 5px; */
  /* max-width: 512px; */
  /* margin: auto; */
}


/* Display the columns below each other instead of side by side on small screens */


/* Add some shadows to create a card effect */
.card {
    width: 33.3%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  margin: 5% auto;
  border-radius: 30px;
  border: 2px solid rgb(0, 255, 255);
}

/* Some left and right padding inside the container */
.container {
  max-width: 100%;
  padding: 0 16px;
}

/* Clear floats */
.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}
h2{
    text-transform: uppercase;
}
img{
    padding: 5%;
    border-radius: 10% 10% 2% 2%;
}
p{
    color: #000;
}
#cardinfo{
    padding: 6%;
    padding-bottom: 0px;
    }
    @media screen and (max-width: 650px) {
  .card {
    width: 95%;
    display: block;
    /* margin: 5%; */
  }
}
</style>
            <!-- <div class="column"> -->
              <div class="card">
                <img src="/<%= singlepatient.image_name %>" alt="Jane" style="width:100%">
                <div class="container" id="cardinfo">
                  <h2><%= singlepatient.name%></h2>
                  <p>Age : <%= singlepatient.age%></p>
                  <p>Blood Group : <%= singlepatient.bg%></p>
                  <p>Class : <span id="pclass"><%= singlepatient.class%></span></p>
                  <p><a href="/<%= singlepatient.image_name %>"  download='<%= singlepatient.name%>-<%= singlepatient.pid%>'>
                    <button class="button btn btn-primary">Download Image</button>
                </a></p>
                </div>
              </div>
            <!-- </div> -->
            
<script>
    const pclass = document.getElementById('pclass')
    if(<%= singlepatient.class%> == 0){
        pclass.textContent = 'No DR';
    }
    else if(<%= singlepatient.class%> == 1){
        pclass.textContent = 'Mild DR';
    }
    else if(<%= singlepatient.class%> == 2){
        pclass.textContent = 'Moderate DR';
    }
    else if(<%= singlepatient.class%> == 3){
        pclass.textContent = 'Severe DR';
    }
    else if(<%= singlepatient.class%> == 4){
        pclass.textContent = 'Proliferative DR';
    }
</script>